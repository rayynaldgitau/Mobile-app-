<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Set the corner radius for rounded corners -->
    <corners
        android:radius="16dp" />

    <!-- Set the background color -->
    <solid
        android:color="#F0F0F0" /> <!-- Light gray background -->

    <!-- Set a border (optional) -->
    <stroke
        android:width="1dp"
        android:color="#D3D3D3" /> <!-- Light gray border -->

    <!-- Optional padding inside the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
