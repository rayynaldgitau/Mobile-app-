<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_view"
    tools:context=".CompanyDash">

    <TextView
        android:id="@+id/recieve_jobs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="4dp"
        android:text="Comapny DashBoard"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:layout_margin="10dp"

        android:layout_marginStart="8dp"

        android:layout_marginBottom="108dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/tvJobCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Post Jobs : 3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rvJobCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Recieving Job Application : 2"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="20dp">


            <Button
                android:id="@+id/view_jobs"
                android:layout_width="240dp"
                android:layout_height="110dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_box"

                android:padding="20dp"
                android:text="View Post Jobs"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="110dp"
                android:layout_height="190dp"
                android:layout_marginStart="240dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/reload" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/notifi"
                android:layout_width="240dp"
                android:layout_height="110dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_box"
                android:padding="20dp"
                android:text="Notification"
                android:textColor="@color/black"
                android:textSize="20sp" />


            <ImageView
                android:layout_width="110dp"
                android:layout_height="190dp"
                android:layout_marginStart="240dp"
                android:src="@drawable/bell" />


        </RelativeLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_job"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/backgroundbox2"
            android:backgroundTint="@color/green"
            android:padding="20dp"
            android:text="Create a job"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/vhome"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/vCategory"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/category" />

        <ImageButton
            android:id="@+id/vInqury"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/inquiry" />

        <ImageButton
            android:id="@+id/vProfile"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/profilenav" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>