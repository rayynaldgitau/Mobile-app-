<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_view"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/etEmpName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_box"
        android:hint="@string/hintd1"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#0E0D0D"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/etEmpAge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_box"
        android:ems="10"
        android:hint="@string/hintd2"
        android:gravity="center"
        android:textColor="#040303"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/etEmpSalary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_box"
        android:ems="10"
        android:hint="@string/hintd3"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#070606"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/btnUpdateData"
        android:layout_width="177dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#B5FEAF"
        android:text="@string/dEdt"
        android:background="@drawable/background_box"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="48dp"
        android:layout_marginTop="365dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/vhome"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/vCategory"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/category" />

        <ImageButton
            android:id="@+id/vInqury"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/inquiry" />

        <ImageButton
            android:id="@+id/vProfile"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/profilenav" />
    </LinearLayout>


</LinearLayout>